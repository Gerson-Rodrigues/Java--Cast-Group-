import java.util.Scanner;
public class Exe_4 {

	public static void main(String[] args) {
		// Um usuário deseja um algoritmo onde possa escolher que tipo de média 
		// deseja calcular a partir de 3 notas. Faça um algoritmo que leia as notas,
		// a opção escolhida pelo usuário e calcule a média.
		// 1 -aritmética 
		// 2 -ponderada (pesos: 3,3,4)
		
		
		Scanner num = new Scanner(System.in);
		
		System.out.println("Digite a Nota 1: ");
		int nota1 = num.nextInt();
		
		System.out.println("Digite a nota 2: ");
		int nota2 = num.nextInt();
		
		System.out.println("Digite a nota 3:");
		int nota3 = num.nextInt();
		
		
		System.out.println("====================================================\n"
				+ "Tens preferencia por qual forma calcular a média?\n"
				+ "============================================================");
		System.out.println("Opção 1 Aritmética");
		System.out.println("Opção 2 Ponderada (Pesos: 3, 3, 4 respectivamente)");
		int opcao = num.nextInt();
		int media;
		switch (opcao) {
		case 1: 
			media = (nota1 + nota2 + nota3)/3;
			System.out.println("A média ficou " + media);
		break;
		case 2:
			media = ((nota1*3)+(nota2*3)+(nota3*4)/3);
			System.out.println("A média ficou " +media);
		break;
		default:
		       System.out.println("Opção inválida!!!!");
		       return ;
			
		}
		
		
	}

}
